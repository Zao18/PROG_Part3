@model IEnumerable<PROG_Part_2.Models.Claims>

@{
    ViewData["Title"] = "Status";
}

<body style="background-color: #479ccf; font-family: Arial, sans-serif;">
    <div class="claim-form-container" style="background-color: #ffffff; border-radius: 8px; padding: 30px; box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1); margin: 30px auto; width: 90%; max-width: 1000px;">
        <h2 style="text-align:center; color:#2c3e50; font-size: 24px; font-weight: bold;">Claim History</h2>

        <table class="table" style="width: 100%; margin-top: 20px; border-collapse: collapse; text-align: left;">
            <thead>
                <tr style="background-color: #f8f9fa;">
                    <th style="padding: 12px; border-bottom: 2px solid #dee2e6;">Lecturer Name</th>
                    <th style="padding: 12px; border-bottom: 2px solid #dee2e6;">Hours Worked</th>
                    <th style="padding: 12px; border-bottom: 2px solid #dee2e6;">Hourly Rate</th>
                    <th style="padding: 12px; border-bottom: 2px solid #dee2e6;">Additional Notes</th>
                    <th style="padding: 12px; border-bottom: 2px solid #dee2e6;">Document</th>
                    <th style="padding: 12px; border-bottom: 2px solid #dee2e6;">Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model)
                {
                    <tr style="background-color: #f9f9f9; transition: background-color 0.3s ease;">
                        <td style="padding: 12px; border-bottom: 1px solid #dee2e6;">@claim.Name</td>
                        <td style="padding: 12px; border-bottom: 1px solid #dee2e6;">@claim.HoursWorked</td>
                        <td style="padding: 12px; border-bottom: 1px solid #dee2e6;">@claim.HourlyRate</td>
                        <td style="padding: 12px; border-bottom: 1px solid #dee2e6;">@claim.AdditionalNotes</td>
                        <td style="padding: 12px; border-bottom: 1px solid #dee2e6;">@claim.DocumentName</td>
                        <td style="padding: 12px; border-bottom: 1px solid #dee2e6;">
                            <span class="status-label @(claim.Status.ToLower())">
                                @claim.Status
                            </span>
                        </td>
                    </tr>
                }

                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="6" style="text-align:center; padding: 20px;">No claims found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>

